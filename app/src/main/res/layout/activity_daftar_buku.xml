<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarBukuActivity">

    <LinearLayout
        android:id="@+id/LVKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="kategori Buku"
            android:textSize="24dp" />

        <HorizontalScrollView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/BTNkategori0"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="SEMUA KATEGORI"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/BTNkategori1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="AGAMA"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/BTNkategori2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="FILSAFAT DAN PSIKOLOGI"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/BTNkategori3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="ILMU SOSIAL"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/BTNkategori4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="BAHASA"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/BTNkategori5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="SASTRA"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/BTNkategori6"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="SEJARAH DAN GEOGRAFI"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/BTNkategori7"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="KOMPUTER INFORMASI"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/BTNkategori8"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="SAINS DAN MATEMATIKA"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/BTNkategori9"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="KESENIAN DAN REKREASI"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/BTNkategori10"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_outline"
                    android:paddingHorizontal="10dp"
                    android:text="TEKNOLOGI"
                    android:textSize="12dp" />

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idCourseRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LVKategori"
        android:layout_marginBottom="80dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>