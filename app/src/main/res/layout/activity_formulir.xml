<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FormulirActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Daftar member"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_account"
            app:civ_border_color="#b7e0ff"
            app:civ_border_width="2dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <!--No Identitas-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="No Identitas"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ETnoidentitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No Identitas"
                    android:textSize="15dp" />

            </TableRow>
            <!--nama-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="Nama Lengkap  "
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ETnama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Nama"
                    android:textSize="15dp" />

            </TableRow>
            <!--jenkel-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="Jenis kelamin"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ETjeniskelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Jenis kelamin"
                    android:textSize="15dp" />

            </TableRow>
            <!--Ttgl lahir-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="TTL"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ETttgllahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tempat, Tanggal Lahir"
                    android:textSize="15dp" />

            </TableRow>
            <!--Email-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="Alamat 1"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ETalamat1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat tinggal sesuai identitas"
                    android:textSize="15dp" />

            </TableRow>
            <!--Alamat Sesuai Kartu Identitas-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="Alamat 2 "
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ETalamat2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat tinggal saat ini"
                    android:textSize="15dp" />

            </TableRow>
            <!--Alamat tinggal saat ini-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="No. HP"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ETnotelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No Hp/Telphone"
                    android:textSize="15dp" />

            </TableRow>
            <!--NoHp-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="Pekerjaan"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ETperkerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pekerjaan"
                    android:textSize="15dp" />

            </TableRow>
            <!--Pekerjaan-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="Nama Institusi"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ETnamainstitusi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Institusi/Sekolah"
                    android:textSize="15dp" />

            </TableRow>
            <!--Nama Institusi/Sekolah-->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="Alamat Institusi"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ETalamatinstitusi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Institusi/Sekolah"
                    android:textSize="15dp" />

            </TableRow>
            <!--Alamat Institusi/Sekolah-->
